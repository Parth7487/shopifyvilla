{% comment %}
  Footer Snippet
  Customizable footer with links, newsletter, and social media
{% endcomment %}

<footer class="site-footer" style="
  background-color: {{ section.settings.footer_bg_color }};
  color: {{ section.settings.footer_text_color }};
  padding-top: {{ section.settings.footer_padding_top }}px;
  padding-bottom: {{ section.settings.footer_padding_bottom }}px;
">
  <div class="footer-container">
    {% if section.settings.show_newsletter %}
      <div class="footer-newsletter">
        <h3 class="footer-newsletter-heading">{{ section.settings.newsletter_heading }}</h3>
        <p class="footer-newsletter-text">{{ section.settings.newsletter_text }}</p>
        <form class="footer-newsletter-form">
          <input 
            type="email" 
            placeholder="{{ section.settings.newsletter_placeholder }}"
            required
            class="footer-newsletter-input"
          >
          <button type="submit" class="footer-newsletter-button">
            {{ section.settings.newsletter_button_text }}
          </button>
        </form>
      </div>
    {% endif %}

    <div class="footer-grid" style="
      grid-template-columns: repeat({{ section.settings.columns_count }}, 1fr);
      gap: {{ section.settings.grid_gap }}px;
    ">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'linklist' %}
            <div class="footer-column" {{ block.shopify_attributes }}>
              <h4 class="footer-column-heading">{{ block.settings.heading }}</h4>
              <ul class="footer-links">
                {% for link in linklists[block.settings.menu].links %}
                  <li><a href="{{ link.url }}" class="footer-link">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
            </div>
          {% when 'text' %}
            <div class="footer-column" {{ block.shopify_attributes }}>
              <h4 class="footer-column-heading">{{ block.settings.heading }}</h4>
              <div class="footer-text">{{ block.settings.content }}</div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <div class="footer-bottom">
      <div class="footer-social">
        {% if section.settings.show_social %}
          {% if section.settings.social_instagram != blank %}
            <a href="{{ section.settings.social_instagram }}" target="_blank" class="footer-social-link">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          {% endif %}
          {% if section.settings.social_facebook != blank %}
            <a href="{{ section.settings.social_facebook }}" target="_blank" class="footer-social-link">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          {% endif %}
        {% endif %}
      </div>

      <div class="footer-copyright">
        <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. {{ section.settings.copyright_text }}</p>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    width: 100%;
    margin-top: auto;
  }

  .footer-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .footer-newsletter {
    padding: 64px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    margin-bottom: 64px;
  }

  .footer-newsletter-heading {
    font-size: 24px;
    font-weight: 300;
    margin-bottom: 16px;
  }

  .footer-newsletter-text {
    font-size: 14px;
    font-weight: 300;
    margin-bottom: 24px;
    opacity: 0.8;
  }

  .footer-newsletter-form {
    display: flex;
    gap: 12px;
    max-width: 500px;
  }

  .footer-newsletter-input {
    flex: 1;
    padding: 12px 16px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: #ffffff;
    border-radius: 4px;
  }

  .footer-newsletter-button {
    padding: 12px 32px;
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: #ffffff;
    border-radius: 4px;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 12px;
    font-weight: 300;
  }

  .footer-grid {
    display: grid;
    margin-bottom: 64px;
  }

  .footer-column-heading {
    font-size: 14px;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 24px;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 12px;
  }

  .footer-link {
    color: inherit;
    text-decoration: none;
    font-size: 14px;
    font-weight: 300;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .footer-link:hover {
    opacity: 1;
  }

  .footer-text {
    font-size: 14px;
    font-weight: 300;
    line-height: 1.6;
    opacity: 0.8;
  }

  .footer-bottom {
    padding-top: 32px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 24px;
  }

  .footer-social {
    display: flex;
    gap: 16px;
  }

  .footer-social-link {
    color: inherit;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .footer-social-link:hover {
    opacity: 1;
  }

  .footer-copyright {
    font-size: 12px;
    font-weight: 300;
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr !important;
    }

    .footer-newsletter-form {
      flex-direction: column;
    }

    .footer-newsletter-button {
      width: 100%;
    }
  }
</style>

