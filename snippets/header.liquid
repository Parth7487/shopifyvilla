{% comment %}
  Header Snippet
  Customizable header with navigation, logo, and cart
{% endcomment %}

{% assign header_bg = section.settings.header_bg_color | default: '#ffffff' %}
{% assign header_border = section.settings.header_border_color | default: '#e7e5e4' %}
{% assign show_banner = section.settings.show_banner | default: true %}
{% assign banner_text = section.settings.banner_text | default: 'Free shipping on orders over 500 kr' %}
{% assign banner_bg_1 = section.settings.banner_bg_color_1 | default: '#f5f5f4' %}
{% assign banner_bg_2 = section.settings.banner_bg_color_2 | default: '#fafaf9' %}
{% assign banner_text_color = section.settings.banner_text_color | default: '#78716c' %}
{% assign logo_img = section.settings.logo %}
{% assign logo_height = section.settings.logo_height | default: 56 %}
{% assign logo_text_size = section.settings.logo_text_size | default: 24 %}
{% assign logo_text_color = section.settings.logo_text_color | default: '#1c1917' %}
{% assign menu_handle = section.settings.menu | default: 'main-menu' %}
{% assign nav_color = section.settings.nav_text_color | default: '#1c1917' %}
{% assign nav_size = section.settings.nav_text_size | default: 14 %}

<header class="site-header" style="
  background-color: {{ header_bg }};
  border-bottom: 1px solid {{ header_border }};
">
  {% if show_banner %}
    <div class="header-banner" style="
      background: linear-gradient(to right, {{ banner_bg_1 }}, {{ banner_bg_2 }});
      color: {{ banner_text_color }};
      padding: 8px;
      text-align: center;
      font-size: 12px;
      font-weight: 300;
      letter-spacing: 1px;
    ">
      {{ banner_text }}
    </div>
  {% endif %}

  <div class="header-main">
    <div class="header-container">
      <div class="header-left">
        <button class="mobile-menu-toggle" aria-label="Toggle menu">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 12h18M3 6h18M3 18h18"/>
          </svg>
        </button>
      </div>

      <div class="header-logo">
        <a href="{{ routes.root_url }}">
          {% if logo_img != blank %}
            <img 
              src="{{ logo_img | image_url: width: 200 }}"
              alt="{{ shop.name }}"
              class="logo-image"
              style="height: {{ logo_height }}px;"
            >
          {% else %}
            <span class="logo-text" style="
              font-size: {{ logo_text_size }}px;
              color: {{ logo_text_color }};
            ">
              {{ shop.name }}
            </span>
          {% endif %}
        </a>
      </div>

      <div class="header-right">
        <nav class="header-nav desktop-nav">
          {% if linklists[menu_handle] != blank %}
            {% for link in linklists[menu_handle].links %}
              <a href="{{ link.url }}" class="nav-link" style="
                color: {{ nav_color }};
                font-size: {{ nav_size }}px;
              ">
                {{ link.title }}
              </a>
            {% endfor %}
          {% else %}
            <a href="/" class="nav-link" style="color: {{ nav_color }}; font-size: {{ nav_size }}px;">Home</a>
            <a href="/collections/all" class="nav-link" style="color: {{ nav_color }}; font-size: {{ nav_size }}px;">Products</a>
            <a href="/pages/about" class="nav-link" style="color: {{ nav_color }}; font-size: {{ nav_size }}px;">About</a>
            <a href="/pages/contact" class="nav-link" style="color: {{ nav_color }}; font-size: {{ nav_size }}px;">Contact</a>
          {% endif %}
        </nav>

        <div class="header-icons">
          <a href="{{ routes.search_url }}" class="header-icon" aria-label="Search">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"/>
              <path d="m21 21-4.35-4.35"/>
            </svg>
          </a>
          <a href="{{ routes.account_url }}" class="header-icon" aria-label="Account">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
              <circle cx="12" cy="7" r="4"/>
            </svg>
          </a>
          <a href="{{ routes.cart_url }}" class="header-icon cart-icon" aria-label="Cart">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
              <line x1="3" y1="6" x2="21" y2="6"/>
              <path d="M16 10a4 4 0 0 1-8 0"/>
            </svg>
            <span class="cart-count">0</span>
          </a>
        </div>
      </div>
    </div>

    <nav class="mobile-nav" id="mobile-nav">
      {% if linklists[menu_handle] != blank %}
        {% for link in linklists[menu_handle].links %}
          <a href="{{ link.url }}" class="mobile-nav-link">{{ link.title }}</a>
        {% endfor %}
      {% else %}
        <a href="/" class="mobile-nav-link">Home</a>
        <a href="/collections/all" class="mobile-nav-link">Products</a>
        <a href="/pages/about" class="mobile-nav-link">About</a>
        <a href="/pages/contact" class="mobile-nav-link">Contact</a>
      {% endif %}
    </nav>
  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: #ffffff;
    transition: all 0.3s ease;
  }

  .header-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80px;
  }

  .header-left,
  .header-right {
    display: flex;
    align-items: center;
    gap: 24px;
    flex: 1;
  }

  .header-logo {
    flex: 0 0 auto;
    text-align: center;
  }

  .header-logo a {
    text-decoration: none;
  }

  .logo-image {
    height: 56px;
    width: auto;
  }

  .logo-text {
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .desktop-nav {
    display: flex;
    gap: 32px;
  }

  .nav-link {
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 300;
    transition: opacity 0.3s ease;
  }

  .nav-link:hover {
    opacity: 0.7;
  }

  .header-icons {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .header-icon {
    color: #1c1917;
    text-decoration: none;
    position: relative;
  }

  .cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background: #1c1917;
    color: #ffffff;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 10px;
  }

  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    color: #1c1917;
  }

  .mobile-nav {
    display: none;
    flex-direction: column;
    padding: 20px;
    background: #ffffff;
    border-top: 1px solid #e7e5e4;
  }

  .mobile-nav-link {
    padding: 12px 0;
    text-decoration: none;
    color: #1c1917;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 300;
    border-bottom: 1px solid #f5f5f4;
  }

  @media (max-width: 1024px) {
    .desktop-nav {
      display: none;
    }

    .mobile-menu-toggle {
      display: block;
    }

    .mobile-nav.active {
      display: flex;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const menuToggle = document.querySelector('.mobile-menu-toggle');
    const mobileNav = document.getElementById('mobile-nav');
    
    if (menuToggle && mobileNav) {
      menuToggle.addEventListener('click', function() {
        mobileNav.classList.toggle('active');
      });
    }
  });
</script>
