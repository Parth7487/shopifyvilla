{% comment %}
  Newsletter Image Snippet
{% endcomment %}

<div class="newsletter-image-wrapper">
  {% if section.settings.image != blank %}
    <img 
      src="{{ section.settings.image | image_url: width: 800 }}"
      alt="{{ section.settings.image.alt | escape }}"
      class="newsletter-image"
      style="object-position: {{ section.settings.image_position }};"
      loading="lazy"
    >
  {% else %}
    <div class="newsletter-image-placeholder"></div>
  {% endif %}
</div>

<style>
  .newsletter-image-wrapper {
    width: 100%;
    height: 100%;
    min-height: 400px;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    border: 1px solid #e7e5e4;
  }

  .newsletter-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .newsletter-image-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom right, #f5f5f4, #e7e5e4);
  }
</style>

