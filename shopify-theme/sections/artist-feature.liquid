{% comment %}
  Artist Feature Section
  Two-column layout showcasing artist/designer
{% endcomment %}

<section class="artist-feature-section" id="artist-{{ section.id }}" style="
  background-color: {{ section.settings.background_color }};
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
">
  <div class="artist-feature-container">
    <div class="artist-feature-grid" style="
      grid-template-columns: {{ section.settings.layout == 'image-left' ? '1fr 1fr' : '1fr 1fr' }};
      gap: {{ section.settings.grid_gap }}px;
    ">
      {% if section.settings.layout == 'image-left' %}
        <div class="artist-feature-image-wrapper">
          {% if section.settings.image != blank %}
            <img 
              src="{{ section.settings.image | image_url: width: 800 }}"
              alt="{{ section.settings.image.alt | escape }}"
              class="artist-feature-image"
              loading="lazy"
            >
          {% else %}
            <div class="artist-feature-image-placeholder"></div>
          {% endif %}
        </div>
        <div class="artist-feature-content">
          {% render 'artist-feature-content', section: section %}
        </div>
      {% else %}
        <div class="artist-feature-content">
          {% render 'artist-feature-content', section: section %}
        </div>
        <div class="artist-feature-image-wrapper">
          {% if section.settings.image != blank %}
            <img 
              src="{{ section.settings.image | image_url: width: 800 }}"
              alt="{{ section.settings.image.alt | escape }}"
              class="artist-feature-image"
              loading="lazy"
            >
          {% else %}
            <div class="artist-feature-image-placeholder"></div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .artist-feature-section {
    width: 100%;
  }

  .artist-feature-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .artist-feature-grid {
    display: grid;
    align-items: center;
  }

  .artist-feature-image-wrapper {
    width: 100%;
    height: 100%;
    min-height: 500px;
    overflow: hidden;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    background: #000;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .artist-feature-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .artist-feature-image-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom right, #1c1917, #292524);
  }

  .artist-feature-content {
    width: 100%;
  }

  @media (max-width: 1024px) {
    .artist-feature-grid {
      grid-template-columns: 1fr !important;
    }

    .artist-feature-image-wrapper {
      min-height: 400px;
    }
  }
</style>

{% schema %}
{
  "name": "Artist Feature",
  "tag": "section",
  "class": "section-artist-feature",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#1c1917"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        { "value": "image-left", "label": "Image Left" },
        { "value": "image-right", "label": "Image Right" }
      ],
      "default": "image-left"
    },
    {
      "type": "range",
      "id": "grid_gap",
      "label": "Grid Gap",
      "min": 24,
      "max": 128,
      "step": 8,
      "unit": "px",
      "default": 64
    },
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Artist Image"
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "Designer"
    },
    {
      "type": "color",
      "id": "label_color",
      "label": "Label Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Designed by Jelena"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Size",
      "min": 32,
      "max": 80,
      "step": 4,
      "unit": "px",
      "default": 48
    },
    {
      "type": "textarea",
      "id": "paragraph_1",
      "label": "Paragraph 1",
      "default": "First paragraph about the artist"
    },
    {
      "type": "textarea",
      "id": "paragraph_2",
      "label": "Paragraph 2",
      "default": "Second paragraph about the artist"
    },
    {
      "type": "textarea",
      "id": "quote",
      "label": "Quote",
      "default": "Inspirational quote from the artist"
    },
    {
      "type": "text",
      "id": "quote_author",
      "label": "Quote Author",
      "default": "Jelena Zivkovic, Mosaic Artist"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#f5f5f4"
    },
    {
      "type": "color",
      "id": "secondary_text_color",
      "label": "Secondary Text Color",
      "default": "#d4d4d4"
    }
  ],
  "presets": [
    {
      "name": "Artist Feature"
    }
  ]
}
{% endschema %}

