{% comment %}
  Hero Section with Video/Image Background
  Highly customizable with text, button, colors, and background options
{% endcomment %}

{{ 'hero-section.css' | asset_url | stylesheet_tag }}

<section class="hero-section" id="hero-{{ section.id }}" style="
  {% if section.settings.background_image %}
    background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}');
  {% endif %}
  background-color: {{ section.settings.background_color }};
  min-height: {{ section.settings.section_height }}vh;
">
  {% if section.settings.video_url != blank %}
    <div class="hero-video-wrapper">
      <video 
        class="hero-video" 
        autoplay 
        muted 
        loop 
        playsinline
        style="opacity: {{ section.settings.video_opacity | divided_by: 100.0 }};"
      >
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      </video>
    </div>
  {% endif %}
  
  <div class="hero-overlay" style="
    background: linear-gradient(to bottom right, 
      {{ section.settings.overlay_color_1 }} {{ section.settings.overlay_opacity_1 }}%, 
      {{ section.settings.overlay_color_2 }} {{ section.settings.overlay_opacity_2 }}%, 
      {{ section.settings.overlay_color_3 }} {{ section.settings.overlay_opacity_3 }}%
    );
  "></div>

  <div class="hero-content">
    {% if section.settings.heading != blank %}
      <h1 class="hero-heading" style="
        color: {{ section.settings.heading_color }};
        font-size: {{ section.settings.heading_size }}px;
        font-weight: {{ section.settings.heading_weight }};
        text-align: {{ section.settings.text_alignment }};
      ">
        {{ section.settings.heading }}
      </h1>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="hero-subheading" style="
        color: {{ section.settings.subheading_color }};
        font-size: {{ section.settings.subheading_size }}px;
        text-align: {{ section.settings.text_alignment }};
      ">
        {{ section.settings.subheading }}
      </p>
    {% endif %}

    {% if section.settings.button_text != blank %}
      <a 
        href="{{ section.settings.button_link }}" 
        class="hero-button"
        style="
          background-color: {{ section.settings.button_bg_color }};
          color: {{ section.settings.button_text_color }};
          border-color: {{ section.settings.button_border_color }};
          font-size: {{ section.settings.button_text_size }}px;
          padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
        "
      >
        {{ section.settings.button_text }}
        <svg class="hero-button-arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>
      </a>
    {% endif %}
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 80px 20px;
  }

  .hero-video-wrapper {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    width: 100%;
    text-align: center;
  }

  .hero-heading {
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .hero-subheading {
    margin-bottom: 40px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-button {
    display: inline-flex;
    align-items: center;
    gap: 16px;
    padding: 24px 80px;
    border: 1px solid;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 300;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    background: rgba(255, 255, 255, 0.1);
  }

  .hero-button:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
  }

  .hero-button-arrow {
    transition: transform 0.3s ease;
  }

  .hero-button:hover .hero-button-arrow {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .hero-section {
      min-height: 70vh !important;
      padding: 40px 20px;
    }

    .hero-heading {
      font-size: 32px !important;
    }

    .hero-subheading {
      font-size: 16px !important;
    }

    .hero-button {
      padding: 16px 40px;
      font-size: 12px !important;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Section",
  "tag": "section",
  "class": "section-hero",
  "settings": [
    {
      "type": "header",
      "content": "Background Settings"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Used as fallback if video is not set"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "label": "Video URL",
      "accept": ["youtube", "vimeo", "mp4"],
      "info": "Video will overlay the background image"
    },
    {
      "type": "range",
      "id": "video_opacity",
      "label": "Video Opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#1c1917"
    },
    {
      "type": "range",
      "id": "section_height",
      "label": "Section Height",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "default": 100
    },
    {
      "type": "header",
      "content": "Overlay Settings"
    },
    {
      "type": "color",
      "id": "overlay_color_1",
      "label": "Overlay Color 1",
      "default": "#1c1917"
    },
    {
      "type": "range",
      "id": "overlay_opacity_1",
      "label": "Overlay Opacity 1",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 30
    },
    {
      "type": "color",
      "id": "overlay_color_2",
      "label": "Overlay Color 2",
      "default": "#292524"
    },
    {
      "type": "range",
      "id": "overlay_opacity_2",
      "label": "Overlay Opacity 2",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 50
    },
    {
      "type": "color",
      "id": "overlay_color_3",
      "label": "Overlay Color 3",
      "default": "#1c1917"
    },
    {
      "type": "range",
      "id": "overlay_opacity_3",
      "label": "Overlay Opacity 3",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 70
    },
    {
      "type": "header",
      "content": "Text Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to VillaBella"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Size",
      "min": 24,
      "max": 96,
      "step": 4,
      "unit": "px",
      "default": 64
    },
    {
      "type": "select",
      "id": "heading_weight",
      "label": "Heading Weight",
      "options": [
        { "value": "300", "label": "Light" },
        { "value": "400", "label": "Normal" },
        { "value": "600", "label": "Semi-bold" },
        { "value": "700", "label": "Bold" }
      ],
      "default": "300"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Bring the Mediterranean feeling home"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "subheading_size",
      "label": "Subheading Size",
      "min": 14,
      "max": 32,
      "step": 2,
      "unit": "px",
      "default": 20
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "rgba(255, 255, 255, 0.1)"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_border_color",
      "label": "Button Border Color",
      "default": "rgba(255, 255, 255, 0.2)"
    },
    {
      "type": "range",
      "id": "button_text_size",
      "label": "Button Text Size",
      "min": 10,
      "max": 20,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "range",
      "id": "button_padding_vertical",
      "label": "Button Padding Vertical",
      "min": 8,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "button_padding_horizontal",
      "label": "Button Padding Horizontal",
      "min": 16,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}

