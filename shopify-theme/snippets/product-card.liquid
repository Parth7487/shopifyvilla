{% comment %}
  Product Card Snippet
  Reusable product card component
{% endcomment %}

<div class="product-card" data-product-id="{{ product.id }}">
  <a href="{{ product.url }}" class="product-card-link">
    <div class="product-card-image-wrapper">
      {% if product.featured_image %}
        <img 
          src="{{ product.featured_image | image_url: width: 600 }}"
          alt="{{ product.featured_image.alt | escape }}"
          class="product-card-image"
          loading="lazy"
        >
      {% else %}
        <div class="product-card-placeholder-image"></div>
      {% endif %}
      
      {% if product.images.size > 1 %}
        <div class="product-card-indicators">
          {% for image in product.images limit: 5 %}
            <span class="product-card-indicator{% if forloop.first %} active{% endif %}"></span>
          {% endfor %}
        </div>
      {% endif %}
    </div>
    
    <div class="product-card-info">
      <h3 class="product-card-title" style="color: {{ section.settings.product_title_color | default: '#1c1917' }};">
        {{ product.title }}
      </h3>
      
      {% if product.vendor != blank %}
        <p class="product-card-vendor" style="color: {{ section.settings.product_vendor_color | default: '#78716c' }};">
          {{ product.vendor }}
        </p>
      {% endif %}
      
      <div class="product-card-price-wrapper">
        <span class="product-card-price" style="color: {{ section.settings.product_price_color | default: '#1c1917' }};">
          {{ product.price | money }}
        </span>
        {% if product.compare_at_price > product.price %}
          <span class="product-card-compare-price" style="color: {{ section.settings.product_compare_price_color | default: '#a8a29e' }};">
            {{ product.compare_at_price | money }}
          </span>
        {% endif %}
      </div>
    </div>
  </a>
</div>

<style>
  .product-card {
    position: relative;
    transition: transform 0.3s ease;
  }

  .product-card:hover {
    transform: translateY(-4px);
  }

  .product-card-link {
    text-decoration: none;
    display: block;
  }

  .product-card-image-wrapper {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 8px;
    margin-bottom: 24px;
    background: linear-gradient(to bottom right, #f5f5f4, #fafaf9);
  }

  .product-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .product-card:hover .product-card-image {
    transform: scale(1.05);
  }

  .product-card-placeholder-image {
    width: 100%;
    height: 100%;
    background: #e5e5e5;
  }

  .product-card-indicators {
    position: absolute;
    bottom: 12px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 4px;
    z-index: 10;
  }

  .product-card-indicator {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    transition: all 0.3s ease;
  }

  .product-card-indicator.active {
    width: 24px;
    background: rgba(255, 255, 255, 1);
    border-radius: 3px;
  }

  .product-card-info {
    text-align: left;
  }

  .product-card-title {
    font-size: 20px;
    font-weight: 300;
    margin-bottom: 8px;
    line-height: 1.3;
  }

  .product-card-vendor {
    font-size: 14px;
    font-weight: 300;
    margin-bottom: 12px;
  }

  .product-card-price-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
  }

  .product-card-price {
    font-size: 18px;
    font-weight: 300;
  }

  .product-card-compare-price {
    font-size: 14px;
    text-decoration: line-through;
    font-weight: 300;
  }
</style>

