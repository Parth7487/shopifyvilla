{% comment %}
  Newsletter Content Snippet
{% endcomment %}

<div class="newsletter-content">
  {% if section.settings.heading != blank %}
    <h2 class="newsletter-heading" style="
      color: {{ section.settings.heading_color }};
      font-size: {{ section.settings.heading_size }}px;
      font-weight: 300;
      margin-bottom: 24px;
      line-height: 1.2;
    ">
      {{ section.settings.heading }}
    </h2>
  {% endif %}

  {% if section.settings.description != blank %}
    <p class="newsletter-description" style="
      color: {{ section.settings.description_color }};
      font-size: {{ section.settings.description_size }}px;
      font-weight: 300;
      line-height: 1.6;
      margin-bottom: 40px;
    ">
      {{ section.settings.description }}
    </p>
  {% endif %}

  <div class="newsletter-form-wrapper" style="
    padding-top: 24px;
    border-top: 1px solid #e7e5e4;
  ">
    {% if section.settings.form_heading != blank %}
      <h3 class="newsletter-form-heading" style="
        font-size: 24px;
        font-weight: 300;
        color: #1c1917;
        margin-bottom: 8px;
      ">
        {{ section.settings.form_heading }}
      </h3>
    {% endif %}

    {% if section.settings.form_subheading != blank %}
      <p class="newsletter-form-subheading" style="
        font-size: 14px;
        font-weight: 300;
        color: #78716c;
        margin-bottom: 24px;
      ">
        {{ section.settings.form_subheading }}
      </p>
    {% endif %}

    <form class="newsletter-form" action="{{ routes.cart_url }}" method="post">
      <div class="newsletter-form-row">
        <input 
          type="email" 
          name="contact[email]"
          placeholder="{{ section.settings.placeholder_text }}"
          required
          class="newsletter-input"
          style="
            background-color: {{ section.settings.input_bg_color }};
            border-color: {{ section.settings.input_border_color }};
            color: {{ section.settings.input_text_color }};
          "
        >
        <button 
          type="submit" 
          class="newsletter-button"
          style="
            background-color: {{ section.settings.button_bg_color }};
            color: {{ section.settings.button_text_color }};
          "
        >
          {{ section.settings.button_text }}
        </button>
      </div>

      <div class="newsletter-gdpr">
        <input 
          type="checkbox" 
          id="gdpr-{{ section.id }}" 
          name="gdpr" 
          required
          class="newsletter-checkbox"
        >
        <label for="gdpr-{{ section.id }}" class="newsletter-label">
          {{ section.settings.gdpr_text }}
        </label>
      </div>
    </form>
  </div>
</div>

<style>
  .newsletter-content {
    width: 100%;
  }

  .newsletter-form-row {
    display: flex;
    gap: 12px;
    margin-bottom: 16px;
  }

  .newsletter-input {
    flex: 1;
    padding: 16px 24px;
    border: 1px solid;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 300;
    outline: none;
    transition: border-color 0.3s ease;
  }

  .newsletter-input:focus {
    border-color: #78716c;
  }

  .newsletter-button {
    padding: 16px 40px;
    border: none;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 12px;
    font-weight: 300;
    cursor: pointer;
    transition: opacity 0.3s ease;
  }

  .newsletter-button:hover {
    opacity: 0.9;
  }

  .newsletter-gdpr {
    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .newsletter-checkbox {
    width: 20px;
    height: 20px;
    margin-top: 2px;
    cursor: pointer;
  }

  .newsletter-label {
    font-size: 12px;
    font-weight: 300;
    color: #78716c;
    cursor: pointer;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .newsletter-form-row {
      flex-direction: column;
    }

    .newsletter-button {
      width: 100%;
    }
  }
</style>

