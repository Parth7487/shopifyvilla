{% comment %}
  Footer Section
  Allows customization in theme editor
{% endcomment %}

{% render 'footer' %}

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Footer Styling"
    },
    {
      "type": "color",
      "id": "footer_bg_color",
      "label": "Footer Background Color",
      "default": "#1c1917"
    },
    {
      "type": "color",
      "id": "footer_text_color",
      "label": "Footer Text Color",
      "default": "#f5f5f4"
    },
    {
      "type": "range",
      "id": "footer_padding_top",
      "label": "Footer Padding Top",
      "min": 40,
      "max": 120,
      "step": 10,
      "unit": "px",
      "default": 64
    },
    {
      "type": "range",
      "id": "footer_padding_bottom",
      "label": "Footer Padding Bottom",
      "min": 40,
      "max": 120,
      "step": 10,
      "unit": "px",
      "default": 64
    },
    {
      "type": "header",
      "content": "Newsletter Settings"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show Newsletter",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter Heading",
      "default": "Stay Updated"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Newsletter Text",
      "default": "Subscribe to our newsletter for exclusive offers"
    },
    {
      "type": "text",
      "id": "newsletter_placeholder",
      "label": "Email Placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "newsletter_button_text",
      "label": "Button Text",
      "default": "Subscribe"
    },
    {
      "type": "header",
      "content": "Grid Settings"
    },
    {
      "type": "range",
      "id": "columns_count",
      "label": "Number of Columns",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "grid_gap",
      "label": "Grid Gap",
      "min": 16,
      "max": 64,
      "step": 8,
      "unit": "px",
      "default": 32
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show Social Media",
      "default": true
    },
    {
      "type": "url",
      "id": "social_instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_facebook",
      "label": "Facebook URL"
    },
    {
      "type": "header",
      "content": "Copyright"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "All rights reserved."
    }
  ],
  "blocks": [
    {
      "type": "linklist",
      "name": "Link List",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Shop"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "About"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "linklist",
        "settings": {
          "heading": "Shop"
        }
      },
      {
        "type": "linklist",
        "settings": {
          "heading": "Company"
        }
      },
      {
        "type": "linklist",
        "settings": {
          "heading": "Support"
        }
      },
      {
        "type": "text",
        "settings": {
          "heading": "About",
          "content": "<p>VillaBella brings the Mediterranean feeling home.</p>"
        }
      }
    ]
  }
}
{% endschema %}

