{% comment %}
  Header Section
  Allows customization in theme editor
{% endcomment %}

{% render 'header' %}

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "header",
      "content": "Banner Settings"
    },
    {
      "type": "checkbox",
      "id": "show_banner",
      "label": "Show Banner",
      "default": true
    },
    {
      "type": "text",
      "id": "banner_text",
      "label": "Banner Text",
      "default": "Free shipping on orders over 500 kr"
    },
    {
      "type": "color",
      "id": "banner_bg_color_1",
      "label": "Banner Background Color 1",
      "default": "#f5f5f4"
    },
    {
      "type": "color",
      "id": "banner_bg_color_2",
      "label": "Banner Background Color 2",
      "default": "#fafaf9"
    },
    {
      "type": "color",
      "id": "banner_text_color",
      "label": "Banner Text Color",
      "default": "#78716c"
    },
    {
      "type": "range",
      "id": "banner_text_size",
      "label": "Banner Text Size",
      "min": 10,
      "max": 16,
      "step": 1,
      "unit": "px",
      "default": 12
    },
    {
      "type": "range",
      "id": "banner_padding",
      "label": "Banner Padding",
      "min": 4,
      "max": 16,
      "step": 2,
      "unit": "px",
      "default": 8
    },
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "range",
      "id": "logo_height",
      "label": "Logo Height",
      "min": 30,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 56
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text (if no image)",
      "default": "VillaBella"
    },
    {
      "type": "range",
      "id": "logo_text_size",
      "label": "Logo Text Size",
      "min": 16,
      "max": 32,
      "step": 1,
      "unit": "px",
      "default": 24
    },
    {
      "type": "color",
      "id": "logo_text_color",
      "label": "Logo Text Color",
      "default": "#1c1917"
    },
    {
      "type": "header",
      "content": "Navigation Settings"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Main Menu",
      "default": "main-menu"
    },
    {
      "type": "color",
      "id": "nav_text_color",
      "label": "Navigation Text Color",
      "default": "#1c1917"
    },
    {
      "type": "range",
      "id": "nav_text_size",
      "label": "Navigation Text Size",
      "min": 12,
      "max": 18,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "header",
      "content": "Header Styling"
    },
    {
      "type": "color",
      "id": "header_bg_color",
      "label": "Header Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "header_border_color",
      "label": "Header Border Color",
      "default": "#e7e5e4"
    }
  ]
}
{% endschema %}

